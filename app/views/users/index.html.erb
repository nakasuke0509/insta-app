<% provide(:title, 'All users') %>
<h1>All users</h1>

<!--  検索拡張機能  -->
<%= form_tag(users_path, :method => 'get' ) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'ユーザー名検索', :name => nil %>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
</ul>
